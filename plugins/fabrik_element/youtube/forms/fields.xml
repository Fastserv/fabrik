<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<form>
	<fields name="params">
		<fieldset name="plg-element-youtube" addfieldpath="/administrator/components/com_fabrik/models/fields">
			<field name="width" type="text" size="3" label="Width" default="60" description="" />
			<field name="default" type="text" size="50" default="" label="Default" />
			<field name="include_related" type="radio" default="1" label="INCLUDERELATEDVIDEOS" description="">
				<option value="0">No</option>
				<option value="1">Yes</option>
			</field>
			<field name="show_border" type="radio" default="0" label="SHOWBORDER" description="">
				<option value="0">No</option>
				<option value="1">Yes</option>
			</field>
			<field name="enable_delayed_cookies" type="radio" default="0" label="ENABLEDELAYEDCOOKIES" description="ENABLEDELAYEDCOOKIESDESC">
				<option value="0">No</option>
				<option value="1">Yes</option>
			</field>
			<field name="color1" type="text" size="9" default="#333333" label="COLOR1" description="COLOR1DESC" />
			<field name="color2" type="text" size="9" default="#000000" label="COLOR2" description="COLOR2DESC" />
			<field name="player_size" type="radio" default="medium" label="PLAYERSIZE" description="">
				<option value="small">340x285</option>
				<option value="medium">445x364</option>
				<option value="normal">500x405</option>
				<option value="big">660x525</option>
			</field>
			<field name="or_width_player" type="text" size="3" label="ORWIDTHPLAYER" description="ORWIDTHPLAYERDESC" />
			<field name="or_height_player" type="text" size="3" label="ORHEIGHTPLAYER" description="ORHEIGHTPLAYERDESC" />
			<field name="display_in_table" type="radio" default="0" label="DISPLAYINTABLE" description="DISPLAYINTABLEDESC">
				<option value="0">Mini</option>
				<option value="1">Display link</option>
				<option value="2">Normal</option>
			</field>
			<field name="display_link" type="radio" default="0" label="DISPLAYLINK" description="DISPLAYLINKDESC">
				<option value="0">Raw txt link</option>
				<option value="1">Linked txt link</option>
				<option value="2">'Watch Video' link</option>
			</field>
			<field name="text_link" type="text" size="12" label="TEXTLINK" default="Watch Video" description="" />
			<field name="target_link" type="radio" default="0" label="TARGETLINK" description="TARGETLINKDESC">
				<option value="0">Current window</option>
				<option value="1">New window</option>
				<option value="2">Lightbox</option>
			</field>
		</fieldset>
	</fields>		
</form>
